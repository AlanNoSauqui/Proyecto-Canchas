    <!-- Navbar -->
    <header>
        <%- include('./navbar'); %>
    </header>

    
    <!-- ComoReservar Inicio -->
    <section>
        
        <div class="bdy">

            <div style="align-items: center;">
                <div class="square" style="background-color:gray;">
                </div>
                <div class="squareText">
                    <h5>Paso numero  1 </h5>
